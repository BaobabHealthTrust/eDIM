
    <%= javascript_include_tag 'jquery.dataTables.min.js' %>
    <style type="text/css">
      .even{
        background-color: #CCCCCC !important;
      }
        input,label{
          margin-top: 5px;
          font-size: 25px;
        }

    </style>
    <script type="text/javascript">
      // Styling the table with datatables library
      $(document).ready(function() {
        // $.fn.dataTable.moment( 'MMM-YYYY' );
        $('#generalInventory').DataTable({"bLengthChange": false, "bDestroy": true, "pageLength":5});
      } );
    </script>
    <div style="height: 8vh;border: 1px inset black; border-width: 0px 0px 3px 0px;">
      <h1 style="margin-left: 2vw;">Inventory</h1>
    </div>

    <div style="height: 75vh; overflow: auto;">
      <table id="generalInventory" class="table table-striped table-bordered" width="100%" cellspacing="0">
        <thead>
        <tr>
          <th>Item</th>
          <th style="width: 10%;">Identifier</th>
          <th style="width: 15%;">Category</th>
          <th style="width: 10%;">Current Quantity</th>
          <th style="width: 10%;">Expiration Date</th>
          <th style="width: 20%;">Actions</th>
        </tr>
        </thead>

        <tbody>
        <% (@inventory || []).each do |item| %>
            <tr>
              <td><%= item.drug_name.titleize rescue "" %></td>
              <td><%= Misc.dash_formatter(item.gn_identifier) %></td>
              <td><%= item.drug_category %></td>
              <td><%= number_with_delimiter(item.current_quantity) %></td>
              <td style="text-align: center;" ><%= item.expiration_date.strftime('%b-%Y') rescue ""%></td>
              <td>
                <a href="/general_inventory/<%= item.id %>/edit">
                  <img style="float: left;" src="/assets/edit.png" title="Edit Item">
                </a>
                <a href="/print_bottle_barcode/<%= item.id %>">
                  <img style="padding-right: 5px;padding-left: 5px;" src="/assets/print.png"  title="Print Barcode">
                </a>
                <img style="float: right;" src="/assets/delete.png" title="Void Item"
                     onmousedown="confirmAction('/void_general_inventory/<%= item.id %>', 'Are you Sure?')">
              </td>
            </tr>
        <% end %>

        </tbody>
      </table>
    </div>

    <div class="footer" >
      <button onmousedown="window.location = '/'" class="bttn bttn-success bttn-lg gradient" style="margin-top: 1vh;height: 8vh;margin-right: 2vh;float: right;" type="button">Finish</button>
      <button onmousedown="window.location = '/general_inventory/new'" class="bttn bttn-primary bttn-lg gradient" style="margin-top: 1vh;height: 8vh;margin-right: 2vh;float: right;" type="button">Add Item</button>
    </div>
