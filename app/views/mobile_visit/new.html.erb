<script>
  var tt_cancel_destination = "/mobile_visit";
</script>

<%= form_for :mobile_visit,  :url => mobile_visit_index_path do |f| %>
    <table cellpadding=10>
      <tr>
        <td>Visit Coordinator</td>
        <td>
          <select style='width: 100%' name='visit_coordinator' id='visitCoordinator' helptext='Visit Coordinator'
                  >
            <% (@coordinators || []).each do |person| %>
                <option value="<%= person[0]%>"><%= person[1].titleize %></option>
            <% end %>
          </select>
        </td>
      </tr>
      <tr>
        <td>
          Visit Date:
        </td>
        <td>
          <%= text_field_tag 'visit_date', Date.today.strftime("%d-%m-%Y"),
                             {:id => 'visit_date',
                              :field_type => 'date',
                              :helpText => "Visit date",
                              :maxDate => (Date.today + 20.year).to_date,
                              :minDate => Date.today.to_date,
                              :tt_pageStyleClass => "Date DatesOnly"} %>

        </td>
      </tr>
    </table>


    <%= submit_tag value="Submit"%>
<% end %>
