
<%= javascript_include_tag 'jquery.dataTables.min.js' %>
<style type="text/css">
  .even{
    background-color: #CCCCCC !important;
  }
  input,label{
    margin-top: 5px;
    font-size: 25px;
  }

</style>
<script type="text/javascript">
  // Styling the table with datatables library
  $(document).ready(function() {
    // $.fn.dataTable.moment( 'MMM-YYYY' );
    $('#generalInventory').DataTable({"bLengthChange": false, "bDestroy": true, "pageLength":5});
  } );
</script>
<div style="height: 8vh;border: 1px inset black; border-width: 0px 0px 3px 0px;">
  <h1 style="margin-left: 2vw;">Drug List</h1>
</div>

<div style="height: 75vh; overflow: auto;">
  <table id="generalInventory" class="table table-striped table-bordered" width="100%" cellspacing="0">
    <thead>
    <tr>
      <th >Drug Name</th>
      <th style="width: 20%;">Dose Strength</th>
      <th style="width: 20%;">Dose Form</th>
      <th style="width: 15%;">Actions</th>
    </tr>
    </thead>

    <tbody>
    <% (@drugs || []).each do |drug| %>
        <tr>
          <td><%= drug.name.titleize rescue "" %></td>
          <td><%= drug.dose_strength %></td>
          <td><%= drug.dose_form %></td>
          <td>
            <a href="/drug/<%= drug.id %>/edit">
              <img style="float: left;" src="/assets/edit.png" title="Edit Drug">
            </a>
            <img style="float: right;" src="/assets/delete.png" title="Void Drug"
                 onmousedown="confirmAction('/void_drug/<%= drug.id %>', 'Are you Sure?')">
          </td>
        </tr>
    <% end %>

    </tbody>
  </table>
</div>

<div class="footer" >
  <button onmousedown="window.location = '/main/settings'" class="bttn bttn-success bttn-lg gradient" style="margin-top: 1vh;height: 8vh;margin-right: 2vh;float: right;" type="button">Finish</button>
  <button onmousedown="window.location = '/drug/new'" class="bttn bttn-primary bttn-lg gradient" style="margin-top: 1vh;height: 8vh;margin-right: 2vh;float: right;" type="button">Add Drug</button>
</div>
