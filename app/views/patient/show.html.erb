            <tr>
              <td>&nbsp;</td>
              <th style="text-align: left;"><%= t('menu.terms.patient_id') %></th>
              <th>:</th>
              <td><%= @patient.formatted_pnid %></td>
              <th style="text-align: left;"><%= t('menu.terms.age') %></th>
